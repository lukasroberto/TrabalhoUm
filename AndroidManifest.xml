<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.trabalho.main.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="br.com.trabalho.main.CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.trabalho.main.ListaVendasActivity"
            android:label="@string/title_activity_lista_vendas_activit"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.com.trabalho.main.ListaProdutos"
            android:label="@string/title_activity_lista_produtos" >
        </activity>
        <activity
            android:name="br.com.trabalho.main.ListaCidade"
            android:label="@string/title_activity_lista_cidade" >
        </activity>
        <activity
            android:name="br.com.trabalho.main.GraficoVendas"
            android:label="@string/title_activity_grafico"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="br.com.trabalho.main.FiltraVendas"
            android:label="@string/title_activity_filtra_vendas"
            android:screenOrientation="portrait" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

</manifest>
